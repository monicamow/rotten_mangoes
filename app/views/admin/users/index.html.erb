<h1>Your App Users</h1>

<%= link_to 'New Admin-User', new_admin_user_path %>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Admin</th>
    <th colspan="5"></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.firstname, user_profile_path(user) %></td>
      <td><%= user.lastname %></td>
      <td><%= user.email %></td>
      <% if user.admin %>
        <td>Yes</td>
      <% else %>
        <td>No</td>
      <% end %>
      <td><%= link_to 'Show', admin_user_path(user) %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
      <td><%= link_to 'Destroy', admin_user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

