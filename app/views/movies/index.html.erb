<%= form_tag movies_path, method: :get, class: "col s12" do %>
  <div class="row">
    <div class="input-field col s6">
      <%= text_field_tag :search, nil, class: "validate" %>
      <%= label_tag :search %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s6">
      <% disabled_option = "Choose one... obviously" %>
      <%= select_tag(:runtime_in_minutes, options_for_select([disabled_option, "Under 90 minutes", "Between 90 and 120 minutes", "Over 120 minutes"], disabled: disabled_option, selected: disabled_option)) %>
      <%= label_tag 'Duration' %>
    </div>
  </div>
  <div class="row">
    <%= submit_tag 'Search', name: nil %>
  </div>
<% end %>

<% if @searched_movies %>
  <% @searched_movies.each do |searched_movie| %>
    <% unless searched_movie.nil? %>
      <ul>
        <li><%= link_to searched_movie.title, movie_path(searched_movie) %></li>
      </ul>
    <% end %>
  <% end %>
<% end %>

<div id="new-movie" class="waves-effect waves-light btn">
<%= link_to '<i class="material-icons right">movie</i>New Movie'.html_safe, new_movie_path %>
</div>

<% @movies.each do |movie| %>
  <%= render partial: "movie", locals: {movie: movie} %>
<% end %>

